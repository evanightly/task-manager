extends layout.pug

block content 
    .container
        h2.fw-light.mt-2 Hello There
        .row.justify-content-between
            .col-5.border.border-white.border-2.rounded.pt-2
                form.form(action="/task", method="POST")
                    .form-group
                        label(for="newTask") 
                            h5.fw-light Create new task
                        input.form-control.border-white#newTask(type="text", name="task")
                .d-flex.flex-column
                    form(action="/task/delete", method="post") 
                        each task in tasks
                            label.d-flex.col.bg-light.text-dark.p-2.rounded.mt-2(for=task)
                                input.form-check-input.bg-info.border-0.shadow-none.me-3(id=task, type="checkbox", name="tasks", value=task)
                                p.m-0=task
                        button.btn.btn-primary.btn-block.mt-2 Delete Checked List
            .col-5.pt-2
                .container
                    .row.justify-content-between.align-items-center
                        .col.p-0 
                            h5.fw-light Next Business Call
                        .col-4.p-0
                            button.btn.btn-success.ml-auto.w-100.btm-sm(data-bs-toggle="modal", data-bs-target="#addTask") Add new call
                            #addTask.modal.fade
                                .modal-dialog 
                                    .modal-content 
                                        .modal-header 
                                            h5.modal-title Add Call
                                            button.btn-close(data-bs-dismiss="modal")
                                        .modal-body 
                                            form(action="/call", method="post") 
                                                .form-group
                                                    label.form-label(for="name") Contact Name
                                                    input#name.form-control(type="text", name="text")
                                                .form-group.mt-2 
                                                    label.form-label(for="company") Company
                                                    input#company.form-control(type="text", name="text")
                                                .form-group.mt-2 
                                                    label.form-label(for="number") Contact Number
                                                    input#number.form-control(type="number", name="number")
                                                .form-group.mt-2 
                                                    label.form-label(for="desc") About
                                                    textarea#desc.form-control(name="desc")
                                                .form-group.mt-2 
                                                    label.form-label(for="day") Day
                                                    input#day.form-control(type="date", name="date")
                                                .form-group.mt-2 
                                                    label.form-label(for="time") Time
                                                    input#time.form-control(type="time", name="time")
                                                .form-group.mt-2 
                                                    input.btn.btn-success(type="submit", value="Add Call")
                .container
                    .row.flex-column.gap-2.mt-2
                        .col.rounded.bg-white.text-dark.p-3.pb-2
                            .col-12.d-flex.align-items.center.align-items.center
                                .col-4 
                                    img.user-image.img-fluid.mx-auto(src="https://picsum.photos/200/300?random=2", alt="Michael")
                                .col-12.d-flex.flex-column 
                                    .col
                                        p.m-0.fw-bold Michael
                                        p.m-0 Aleieance Company
                                    .col.flex-column 
                                        p.m-0 123-412-1203
                                        p.m-0.text-primary Contact
                            .col-12.d-flex.flex-column
                                .col-12.mt-2
                                    p Interview preparation
                            .col-12.d-flex.justify-content-between.align-items-center.border-top.border-1.border-light.pt-2
                                .col-6 Monday at 10PM
                                .col-6.text-end
                                    btn.btn.btn-sm.btn-transparent.text-primary.py-1.px-2.m-0 Call now
                                    
            

                    